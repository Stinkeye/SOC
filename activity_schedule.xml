<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soc.matthewhaynes.soc.ScheduleActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/schdlTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CLASS SCHEDULE"
        android:layout_marginTop="16dp"
        />


    <Button
        android:id="@+id/btnViewSched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Schedule"
        android:layout_below="@id/schRecView"
        />

    <Button
        android:id="@+id/btnTblExist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does Table Exists?"
        android:layout_below="@id/schRecView"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/btnDeleteTbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Schedule"
        android:layout_alignParentBottom="true"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/schRecView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/schdlTitle"/>


</RelativeLayout>
